<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.4/xlsx.full.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        /*     fetchClientList()*/
        fetchOrderTypes()
        LoadOrders();
    });
    function printElement(elem) {
        var domClone = elem.cloneNode(true);

        var $printSection = document.getElementById("printSection");

        if (!$printSection) {
            var $printSection = document.createElement("div");
            $printSection.id = "printSection";
            document.body.appendChild($printSection);
        }

        $printSection.innerHTML = "";
        $printSection.appendChild(domClone);


        window.print();
    }
    document.getElementById("pdfButton").onclick = function () {
        printElement(document.getElementById("List"));
    }
    function exportToExcel() {
        const props = ["Code", "ClientName", "Location", "StatusName", "CreatedDateString", "Month", "Channelledby","TotalWithVat"]
        const headers = ["PO No", "Client", "Location", "Status", "Created Date", "Month","Channelled By","Order Total"]


        var table = $('#List').DataTable();
        var data = table.rows({ search: 'applied' }).data().toArray();
        var filteredData = data.map((row) => {
            var filteredRow = {}
            props.forEach(prop => {
                filteredRow[prop] = row[prop]
            })
            return filteredRow
        })

        filteredData.unshift(headers);

        var dataArray = filteredData.map(function (row) {
            return Object.values(row);
        });

        var wb = XLSX.utils.book_new();
        console.log(filteredData)
        var ws = XLSX.utils.aoa_to_sheet(dataArray);

        XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');

        XLSX.writeFile(wb, 'order_data.xlsx');
    }
    document.getElementById('exportButton').addEventListener('click', exportToExcel);


    function fetchOrderTypes() {
        $.ajax({
            url: "/OrderType/GetList",
            type: "POST",
            dataType: "json",
            success: function (response) {
                response.data.forEach(function (item) {
                    $('#typeFilter').append($('<option>', {
                        value: item.Name,
                        text: item.Name
                    }));
                });
               
            },
            error: function (xhr, status, error) {
                console.error("Error fetching client list:", error);
            }
        });
    }

    $(document).ready(function () {

        LoadOrders();

        $('#fromDate').change(function () {
            LoadOrders();
        });


        $('#toDate').change(function () {
            LoadOrders();
        });


        $('#statusFilter').change(function () {
            LoadOrders();
        });

        $('#typeFilter').change(function () {
            LoadOrders();
        });


        $('#clientFilter').keyup(function () {
            LoadOrders();
        });


        $('#salesFilter').keyup(function () {
            LoadOrders();
        });
    });


    function LoadOrders() {

        // Retrieve filter values
        let fromDate = $('#fromDate').val();
        let toDate = $('#toDate').val();
        let status = $('#statusFilter').val();
        let orderType = $('#typeFilter').val();
        let client = $('#clientFilter').val();
        let salesPerson = $('#salesFilter').val();


        if ($.fn.dataTable.isDataTable('#List')) {
            table = $('#List').DataTable();
            table.destroy();
        }

        table = $('#List').DataTable({
            "ordering": false,
            "createdRow": function (row, data, dataIndex) {
            },
            "ajax": {
                "url": "/Order/GetFilteredOrders",
                "type": "POST",
                "data": {
                    "fromDate": fromDate,
                    "toDate": toDate,
                    "status": status,
                    "client": client,
                    "salesPerson": salesPerson,
                    "orderType": orderType,

                },
                "datatype": "json"
            },
            "columns": [
                { "data": "Code", "width": "10%", "ordering": false, "sorting": false },
                { "data": "ClientName", "width": "20%", "ordering": false, "sorting": false },
                { "data": "Location", "width": "20%", "ordering": false, "sorting": false },
                { "data": "StatusName", "width": "10%", "ordering": false, "sorting": false },
                { "data": "CreatedDateString", "width": "15%", "ordering": false, "sorting": false },
                { "data": "Month", "width": "5%", "ordering": false, "sorting": false },
                { "data": "ChanneledBy", "width": "10%", "ordering": false, "sorting": false },
                {
                    "data": "TotalWithVat", "width": "15%", "ordering": false, "sorting": false,
                    "render": function (data, type, row) {
                        // Format TotalWithVat
                        return parseFloat(data).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
                    }
                },

            ]
        });


    }

</script>


