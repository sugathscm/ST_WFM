    function LoadOrders() {

        // Retrieve filter values
        let fromDate = $('#fromDate').val();
        let toDate = $('#toDate').val();
        let status = $('#statusFilter').val();
        let orderType = $('#typeFilter').val();
        let client = $('#clientFilter').val();
        let salesPerson = $('#salesFilter').val();


        if ($.fn.dataTable.isDataTable('#List')) {
            table = $('#List').DataTable();
            table.destroy();
        }

        table = $('#List').DataTable({
            "ordering": false,
            "createdRow": function (row, data, dataIndex) {
            },
            "ajax": {
                "url": "/Order/GetFilteredOrders",
                "type": "POST",
                "data": {
                    "fromDate": fromDate,
                    "toDate": toDate,
                    "status": status,
                    "client": client,
                    "salesPerson": salesPerson,
                    "orderType": orderType,

                },
                "datatype": "json"
            },
            "columns": [
                { "data": "Code", "width": "10%", "ordering": false, "sorting": false },
                { "data": "ClientName", "width": "20%", "ordering": false, "sorting": false },
                { "data": "Location", "width": "20%", "ordering": false, "sorting": false },
                { "data": "StatusName", "width": "10%", "ordering": false, "sorting": false },
                { "data": "CreatedDateString", "width": "15%", "ordering": false, "sorting": false },
                { "data": "Month", "width": "5%", "ordering": false, "sorting": false },
                { "data": "ChanneledBy", "width": "10%", "ordering": false, "sorting": false },
                {
                    "data": "TotalWithVat", "width": "15%", "ordering": false, "sorting": false,
                    "render": function (data, type, row) {
                        // Format TotalWithVat
                        return parseFloat(data).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
                    }
                },

            ]
        });


    }

